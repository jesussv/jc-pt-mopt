{
  "openapi": "3.0.1",
  "info": {
    "title": "JC.LocationIngest",
    "version": "v1"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "Health",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Login y emisión de JWT",
        "description": "Valida UserId/Password contra jcuserinfo (PasswordHash + PasswordSalt) y retorna un JWT (sub=RecId).",
        "operationId": "AuthLogin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCLoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "AuthRegister",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCRegisterRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/inventLocations": {
      "post": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Registrar almacén (bodega fija o móvil)",
        "description": "Crea un registro en JCInventLocation. Si se envía lat/lon, se guarda como ubicación inicial.",
        "operationId": "PostInventLocation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCInventLocationCreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict"
          }
        }
      },
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Listado de almacenes/bodegas (JCInventLocation)",
        "description": "Incluye bodegas móviles con lat/lon (tracking). Filtros: q, inventLocationId, active, isMobile.",
        "operationId": "GetInventLocations",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "inventLocationId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "active",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "isMobile",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 25
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/inventLocations/{inventLocationId}/location": {
      "put": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Actualizar ubicación de bodega móvil",
        "description": "Actualiza lat/lon en JCInventLocation (tracking en vivo).",
        "operationId": "PutInventLocationLocation",
        "parameters": [
          {
            "name": "inventLocationId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCInventLocationUpdateLocationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/inventLocations/near": {
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Bodegas cercanas (radio en KM)",
        "description": "Devuelve bodegas con lat/lon dentro de un radio (ej. 10km). Útil para Google Maps (tipo Uber).",
        "operationId": "GetInventLocationsNear",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "lon",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "radiusKm",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double",
              "default": 10
            }
          },
          {
            "name": "isMobile",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/products": {
      "post": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "PostProduct",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCProductCreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "GetProducts",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "itemId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "barcode",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "active",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 25
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/inventory/stock": {
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "GetInventoryStock",
        "parameters": [
          {
            "name": "itemId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "inventLocationId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "minQty",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/inventory/transactions": {
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "GetInventoryTransactions",
        "parameters": [
          {
            "name": "itemId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "inventLocationId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "movementType",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "voucher",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "to",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/inventory/movement/{id}": {
      "get": {
        "tags": [
          "JC.LocationIngest"
        ],
        "operationId": "GetInventoryMovementById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { }
              }
            }
          }
        }
      }
    },
    "/inventory/movement": {
      "post": {
        "tags": [
          "JC.LocationIngest"
        ],
        "summary": "Registrar movimiento de inventario",
        "description": "Valida stock (OUT) y registra historial en JCInventTrans. CreatedByRecId se toma del JWT (sub).",
        "operationId": "PostInventoryMovement",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JCInventoryMovementRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "JCInventLocationCreateRequest": {
        "required": [
          "inventLocationId",
          "name"
        ],
        "type": "object",
        "properties": {
          "inventLocationId": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "active": {
            "type": "boolean",
            "nullable": true
          },
          "isMobile": {
            "type": "boolean",
            "nullable": true
          },
          "deviceId": {
            "type": "string",
            "nullable": true
          },
          "plate": {
            "type": "string",
            "nullable": true
          },
          "driverName": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "accuracyM": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JCInventLocationUpdateLocationRequest": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "accuracyM": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JCInventoryMovementRequest": {
        "required": [
          "inventLocationId",
          "itemId",
          "movementType",
          "qty"
        ],
        "type": "object",
        "properties": {
          "itemId": {
            "type": "string",
            "nullable": true
          },
          "inventLocationId": {
            "type": "string",
            "nullable": true
          },
          "movementType": {
            "type": "string",
            "nullable": true
          },
          "qty": {
            "type": "number",
            "format": "double"
          },
          "reason": {
            "type": "string",
            "nullable": true
          },
          "voucher": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "accuracyM": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "deviceTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JCLoginRequest": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JCProductCreateRequest": {
        "required": [
          "itemId",
          "nameAlias"
        ],
        "type": "object",
        "properties": {
          "itemId": {
            "type": "string",
            "nullable": true
          },
          "nameAlias": {
            "type": "string",
            "nullable": true
          },
          "barcode": {
            "type": "string",
            "nullable": true
          },
          "active": {
            "type": "boolean",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JCRegisterRequest": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Escribe: Bearer {tu_token}",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
